{#
/**
 * @file
 *
 * Default product template.
 *
 * Available variables:
 * - attributes: HTML attributes for the wrapper.
 * - product: The rendered product fields.
 *   Use 'product' to print them all, or print a subset such as
 *   'product.title'. Use the following code to exclude the
 *   printing of a given field:
 *   @code
 *   {{ product|without('title') }}
 *   @endcode
 * - product_entity: The product entity.
 * - product_url: The product URL.
 *
 * @ingroup themeable
 */
#}
<div class="row">
  <div class="col-md-6">
    {{ drupal_view('wristcheck_product_jcarousel','default') }}
  </div>
  <div class="col-md-6">
    <div class="row">
      <div class="col-md-12">
        {{ product.title }}
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        {{ product.subname }}
      </div>
      <div class="col-md-6">
        wishlist
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        {{ product.field_ref_number }}
      </div>
      <div class="col-md-12">
        <button> add to wishlist</button>
      </div>
      <div class="col-md-12">
        <div>{{ product.field_introduction }}</div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <button>buy new from</button>
      </div>
      <div class="col-md-6">
        <button>buy used from</button>
        <div>
          {{ drupal_view('wristcheck_second_hands_watch') }}
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <h1>{{ 'Specifications'|t }}</h1>
  </div>

  <div class="col-md-12">
    {{ product.body }}
  </div>
  <div class="col-md-12">
    {{ product.field_specifications }}
  </div>
  <div class="col-md-12">
    <h1>RELATED WATCHES</h1>
{#    {{ product.field_related_model }}#}
    {{ drupal_view('wristcheck_models') }}
  </div>
  <div class="col-md-12">
    {{ drupal_view('wristcheck_testimdnials','product_testimdnials') }}
  </div>
</div>

