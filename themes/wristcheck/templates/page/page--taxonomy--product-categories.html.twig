{% include  "@wristcheck/header.html.twig" %}
{% include  "@wristcheck/page/page--header.html.twig" %}
	<section id="shop" class="shop shop-categories">
	    <div class="container">
	        <div class="row">
				{% if shop_sidebar == 'right' %}
					<div class="col-sm-12 col-md-12 col-lg-9">
						{{ drupal_view('product_view','product_categories')}}
    					{{ page.shop_section }}
					</div>
					<div class="col-sm-12 col-md-12 col-lg-3 sidebar">
						{{ page.shop_sidebar }}
					</div>
				{% else %}
					<div class="col-sm-12 col-md-12 col-lg-3 sidebar">
						{{ page.shop_sidebar }}
					</div>
					<div class="col-sm-12 col-md-12 col-lg-9">
						{{ drupal_view('product_view','product_categories')}}
    					{{ page.shop_section }}
					</div>
				{% endif %}
			</div>
		</div>
	</section>
{% include  "@wristcheck/footer.html.twig" %}