{% if breadcrumb %}
  <div class="breadcrumb">
    <ol class="container breadcrumb-container b white">
      {% for item in breadcrumb %}
        {% if item.url %}
          <li><a href="{{ item.url }}">{{ item.text }}</a></li>
        {% else %}
          <li class="active">/ {{ item.text }}</li>
        {% endif %}
      {% endfor %}
    </ol>
  </div>
{% endif %}
